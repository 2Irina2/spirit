<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041a34"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/textView_main_appname"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:src="@drawable/app_logo_color_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:background="@android:color/transparent"
        android:id="@+id/button_main_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_begin"
        android:textAllCaps="false"
        android:textColor="#95bfdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_main_appname"
        app:layout_constraintStart_toStartOf="@+id/textView_main_appname"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_appname" />

</androidx.constraintlayout.widget.ConstraintLayout>